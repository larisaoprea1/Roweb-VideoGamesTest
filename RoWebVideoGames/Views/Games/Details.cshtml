@model RoWebVideoGames.Models.GameReview

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GameItem.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GameItem.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GameItem.ReleaseDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GameItem.ReleaseDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GameItem.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GameItem.Genre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GameItem.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GameItem.Price)
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddReview" asp-route-id="@Model.GameItem.Id" method="POST">
            <div class="form-group">
                <label class="control-label">@Html.DisplayNameFor(model => model.ReviewList[0].Username)</label>
                <input id="reviewName" name="reviewName" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">@Html.DisplayNameFor(model => model.ReviewList[0].Content)</label>
                @Html.TextArea("reviewText", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReviewList[0].Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewList[0].Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewList[0].Date)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ReviewList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.GameItem.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
